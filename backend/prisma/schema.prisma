// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?
  verifiedAccount Boolean @default(false)
  isAdmin   Boolean   @default(false)
  requests  Request[]
  companyId String?
  company   Company?  @relation(fields: [companyId], references: [id])
  magicCodes MagicCode[]
}

model Company {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String?   @unique
  domains     String?  // Email domains (comma-separated) - used for auto-assigning users to company based on email domain (e.g., "example.com, subdomain.example.com")
  users       User[]
  applications Application[]
  invitations Invitation[]
  domainList  Domain[] // Application hosting domains - domains where this company's applications are hosted (see Domain model)
  engManager  String?
  language            String?
  framework           String?
  serverEnvironment   String?
  facing              String?
  deploymentType      String?
  authProfiles        String?
  dataTypes           String?
  contacts    Contact[]
  
  @@index([slug])
}

model ChangeLog {
  id                    String    @id @default(cuid())
  createdAt             DateTime  @default(now())
  userEmail             String
  companyName           String? // Name of the company being updated (at time of submission)
  targetCompanyId       String? // ID of the company being updated (at time of submission)
  proposedCompanyName   String?
  changeDetails         String // JSON blob
  status                String    @default("PENDING") // PENDING, APPROVED, REJECTED

  // New fields for historical accuracy
  approvedBy            String?
  approvedAt            DateTime?
  actionTaken           String? // e.g., 'MERGE', 'CREATE_NEW'
  finalTargetCompanyId  String?
  finalTargetCompanyName String?
  approvedFields        String? // Comma-separated list of fields that were approved
}

model Application {
  id              String    @id @default(cuid())
  name            String
  companyId       String
  company         Company   @relation(fields: [companyId], references: [id])
  requests        Request[]
  scores          Score[]
  applicationDomains ApplicationDomain[]
  deployments     Deployment[]
  description     String?
  owner           String?
  repoUrl         String?
  language        String?
  framework       String?
  serverEnvironment String?
  facing          String?
  deploymentType  String?
  authProfiles    String?
  dataTypes       String?
  contacts        Contact[]
  status          String    @default("onboarded") // pending_executive, pending_technical, onboarded

  // Scoring fields
  sastTool              String?
  sastIntegrationLevel  Int?
  dastTool              String?
  dastIntegrationLevel  Int?
  appFirewallTool       String?
  appFirewallIntegrationLevel Int?
  apiSecurityTool       String?
  apiSecurityIntegrationLevel Int?
  
  apiSecurityNA         Boolean? @default(false)

  metadataLastReviewed  DateTime?
  
  // Deployment metadata (editable in main form, not onboarding)
  currentVersion        String? // Current application version (e.g., "1.2.3", "v2.1.0")
  deploymentEnvironment String? // Primary deployment environment (e.g., "dev", "staging", "prod", "qa")
  gitBranch             String? // Current git branch or tag (e.g., "main", "v1.2.3", "release/2024-01")
  lastDastScanDate      DateTime? // Date/time of last DAST (Dynamic Application Security Testing) scan
  lastSastScanDate      DateTime? // Date/time of last SAST (Static Application Security Testing) scan
  
  // Interfaces with other applications (stored as JSON array of application IDs/names)
  interfaces            String? // JSON array of application names/IDs
  
  // Executive form fields
  businessCriticality   Int?    // 1-5 scale (5 being most critical)
  criticalAspects       String? // Availability, Data Handling, Confidentiality, Integrity, Other (comma-separated)
  devTeamContact        String? // Development team contact information
  
  // Technical form fields
  securityTestingDescription String? // Description of security testing in place
  additionalNotes       String? // Any other information about the application
}

model Contact {
  id            String       @id @default(cuid())
  name          String
  title         String?
  email         String?
  companyId     String?
  company       Company?     @relation(fields: [companyId], references: [id])
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  createdAt     DateTime     @default(now())
}

model Request {
  id            Int         @id @default(autoincrement())
  products      String
  requestType   String
  users         String?
  notes         String?
  adminNotes    String?
  status        String      @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, FAILED
  createdAt     DateTime    @default(now())
  userId        String?
  User          User?       @relation(fields: [userId], references: [id])
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  scriptJobs    ScriptJob[]
}

model ScriptJob {
  id        Int      @id @default(autoincrement())
  requestId Int
  request   Request  @relation(fields: [requestId], references: [id], onDelete: Cascade)
  status    String // RUNNING, COMPLETED, FAILED
  output    String
  startedAt DateTime @default(now())
  endedAt   DateTime?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model MagicCode {
  id        String   @id @default(cuid())
  code      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  
  @@index([code])
  @@index([userId])
}

model Score {
  id                String      @id @default(cuid())
  applicationId     String
  application       Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  knowledgeScore    Int
  toolScore         Int
  totalScore        Int
  calculatedAt      DateTime    @default(now())
  
  @@index([applicationId])
  @@index([calculatedAt])
  @@index([totalScore])
}

model Invitation {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  isAdmin   Boolean  @default(false)
  invitedBy String?  // User ID who sent the invitation
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([email])
  @@index([expiresAt])
}

// Application hosting domains - represents domains where applications are hosted
// This is different from Company.domains which are email domains for user auto-assignment
// Example: If an application is hosted at "api.example.com", that would be a Domain record
model Domain {
  id              String              @id @default(cuid())
  name            String              // Hosting domain name (e.g., example.com, subdomain.example.com) - where applications are hosted
  companyId       String              // Domains are company-specific
  company         Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applicationDomains ApplicationDomain[] // Many-to-many: applications hosted on this domain
  createdAt       DateTime            @default(now())
  
  @@unique([name, companyId]) // Domain name must be unique within a company
  @@index([companyId])
  @@index([name])
}

// Join table: Associates applications with hosting domains (many-to-many)
// An application can be hosted on multiple domains, and a domain can host multiple applications
model ApplicationDomain {
  id            String      @id @default(cuid())
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  domainId      String
  domain        Domain      @relation(fields: [domainId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  
  @@unique([applicationId, domainId]) // Prevent duplicate associations
  @@index([applicationId])
  @@index([domainId])
}

// Deployment history - tracks all deployments for an application
model Deployment {
  id            String      @id @default(cuid())
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  deployedAt    DateTime    @default(now())
  environment   String      // dev, staging, qa, prod, etc.
  version       String?     // Version that was deployed (e.g., "1.2.3", "v2.1.0")
  gitBranch     String?     // Git branch or tag that was deployed (e.g., "main", "v1.2.3")
  deployedBy    String?     // Who deployed it (user email or name)
  notes         String?     // Optional notes about the deployment
  createdAt     DateTime    @default(now())
  
  @@index([applicationId])
  @@index([deployedAt])
  @@index([environment])
}